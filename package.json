{
  "name": "generic-input-method",
  "displayName": "Generic Input Method for Unicode and LaTeX",
  "description": "A generic input method which is suitable for YaTeX-like image completion for LaTeX or Unicode Symbol input for theorem provers such as Lean or Agda.",
  "version": "0.0.4",
  "publisher": "mr-konn",
  "engines": {
    "vscode": "^1.28.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/konn/vscode-generic-input-method"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.complete.latex.greek",
        "title": "Complete Greek"
      },
      {
        "command": "extension.complete.latex.image",
        "title": "Complete by Image"
      },
      {
        "command": "extension.complete.latex.font",
        "title": "Complete Math Font"
      }
    ],
    "keybindings": [
      {
        "command": "extension.image-complete",
        "key": "ctrl+c ;",
        "when": "editorTextFocus && editorLangId == latex"
      },
      {
        "command": "extension.greek-complete",
        "key": "ctrl+c [Quote]",
        "when": "editorTextFocus && editorLangId == latex"
      },
      {
        "command": "extension.font-complete",
        "key": "ctrl+c [BracketLeft]",
        "mac": "cmd+[BracketLeft]",
        "when": "editorTextFocus && editorLangId == latex"
      }
    ],
    "configuration": [
      {
        "type": "object",
        "title": "General Input Method Configuration",
        "properties": {
          "generic-input-methods.input-methods": {
            "description": "Input Method Definitions",
            "type": "array",
            "default": [
              {
                "name": "LaTeX Font Completion",
                "commandName": "latex.font",
                "languages": [
                  "latex"
                ],
                "triggers": [
                  "@"
                ],
                "dictionary": "defaults/fonts.json",
                "renderMode": "latex"
              },
              {
                "name": "LaTeX Image Completion",
                "commandName": "latex.image",
                "languages": [
                  "latex"
                ],
                "triggers": [
                  ";"
                ],
                "dictionary": "defaults/images.json",
                "renderMode": "latex"
              },
              {
                "name": "LaTeX Image Completion",
                "commandName": "latex.greek",
                "languages": [
                  "latex"
                ],
                "triggers": [
                  ":"
                ],
                "dictionary": "defaults/greek.json",
                "renderMode": "latex"
              },
              {
                "name": "Unicode Math",
                "commandName": "text.math",
                "languages": [
                  "markdown"
                ],
                "triggers": [
                  "\\"
                ],
                "dictionary": [
                  "defaults/math.json"
                ]
              }
            ],
            "items": {
              "type": "object",
              "title": "Input Method Definition",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Input Method Name"
                },
                "languages": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "description": "Language Ids in which the IM will be activated"
                },
                "triggers": {
                  "type": "array",
                  "description": "Trigger characters to invoke the Input Method",
                  "items": {
                    "type": "string"
                  }
                },
                "dictionary": {
                  "anyOf": [
                    {
                      "type": "string",
                      "description": "Path to configuration json file"
                    },
                    {
                      "type": "array",
                      "description": "Input items",
                      "items": {
                        "anyOf": [
                          {
                            "type": "string",
                            "description": "External file to include as a dictionary"
                          },
                          {
                            "type": "object",
                            "title": "Completion Item",
                            "properties": {
                              "label": {
                                "type": "string",
                                "description": "Keystroke"
                              },
                              "body": {
                                "type": "string",
                                "description": "Completions to input"
                              },
                              "description": {
                                "type": "string",
                                "description": "Preview string",
                                "default": ""
                              },
                              "required": [
                                "label",
                                "body"
                              ]
                            }
                          }
                        ]
                      }
                    }
                  ]
                }
              }
            }
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.21",
    "tslint": "^5.8.0",
    "@types/node": "^8.10.25",
    "@types/mocha": "^2.2.42"
  }
}
